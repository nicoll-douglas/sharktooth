{
  "include": ["electron/**/*", "shared/**/*"],
  "exclude": ["frontend", "node_modules", "dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "rootDir": ".",
    "outDir": "dist",
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
