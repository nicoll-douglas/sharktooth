{
  "name": "sharktooth",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "main": "dist/electron/main.js",
  "author": {
    "name": "Nicoll Douglas",
    "email": "dev.nicoll.douglas@gmail.com"
  },
  "description": "A music downloader.",
  "scripts": {
    "dev": "concurrently \"npm:dev:frontend\" \"npm:dev:electron\"",
    "dev:frontend": "vite dev",
    "dev:electron": "concurrently \"tsc -w -p tsconfig.electron.json\" \"wait-on http://localhost:5173 && nodemon\"",
    "build": "npm run build:frontend && npm run build:electron && npm run build:backend",
    "build:frontend": "vite build --mode production",
    "build:electron": "tsc -p tsconfig.electron.json && mkdir -p dist/assets && cp -r assets/icons dist/assets",
    "build:backend": "pyinstaller backend/app.py --onefile --name backend --distpath dist/backend --hidden-import flask_socketio --hidden-import socketio --hidden-import socketio.async_drivers --hidden-import socketio.async_drivers.threading --hidden-import engineio --hidden-import engineio.async_drivers --hidden-import engineio.async_drivers.threading && cp -r bin dist && cp backend/db/schema.sql dist/backend/schema.sql",
    "start:electron": "electron dist/electron/main.js",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.26.0",
    "@emotion/react": "^11.14.0",
    "@tanstack/react-query": "^5.86.0",
    "@vitejs/plugin-react": "^5.1.1",
    "chokidar": "^4.0.3",
    "dotenv": "^17.2.2",
    "electron-conf": "^1.3.0",
    "isbot": "^5.1.27",
    "next-themes": "^0.4.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.62.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.9.6",
    "socket.io-client": "^4.8.1",
    "usehooks-ts": "^3.1.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "concurrently": "^9.2.1",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^6.3.3",
    "vite-tsconfig-paths": "^5.1.4",
    "wait-on": "^8.0.4"
  }
}
